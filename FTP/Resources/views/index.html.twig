{% extends "FTPBundle::layout.html.twig" %}
{% block title %}Renegade FTP{% endblock %}

{% block content %}
	<div class='section centered'>
		<div class='row-fluid' style='border-bottom:1px solid #eee;'>
			<span class='span11'><h3>Files</h3></span>
			<span class='span1'><a href='{{ path('_file_upload') }}' class='btn btn-info' style='margin-top:15px;'>Upload</a></span>
		</div>
		
		{% if rows > 0 %}
		<table class='table table-striped table-bordered'>
			<tr><th>File</th><th>Download</th></td>
			{% for i in 0..rows-1 %}
				<tr>
					<td class='span11'>{{ files[i].fileName }}</td>
					
					<td class='span1'><a href='{{ path('_file_download', {'filename':files[i].fileName}) }}' class='btn btn-danger'>Download</a></td>
			
					
					
				</tr>
			{% endfor %}
		</table>
		{% endif %}
		
	</div>
{% endblock %}