{% extends "FTPBundle::layout.html.twig" %}
{% block title %}All users{% endblock %}

{% block content %}
	<div class='section centered'>
		<h3>Current users</h3>
		<table class='table table-striped table-boreded'>
			<tr><th>Username</th><th>Edit</th><th>Delete</th></td>
			{% for i in 0..rows-1 %}
				<tr>
					<td class='span10'>{{ users[i] }}</td>
					<td><button class='btn btn-info'>Edit</button></td>
					<td><button class='btn btn-danger'>Delete</button></td>
				</tr>
			{% endfor %}
		</table>
	</div>
{% endblock %}