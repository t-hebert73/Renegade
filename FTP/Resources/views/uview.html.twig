{% extends "FTPBundle::layout.html.twig" %}
{% block title %}All users{% endblock %}

{% block content %}
	<div class='section centered'>
		<h3>Current users</h3>
		{% if rows > 0 %}
		<table class='table table-striped table-bordered'>
			<tr><th>Username</th><th>Delete</th></td>
			{% for i in 0..rows-1 %}
				<tr>
					<td class='span12'>{{ users[i].username }}</td>
					<td><a href='{{ path('_user_delete', {'id':users[i].id}) }}' class='btn btn-danger'>Delete</a></td>
				</tr>
			{% endfor %}
		</table>
		{% endif %}
	</div>
{% endblock %}